{
  "name": "pbleap",
  "displayName": "PBLeap",
  "version": "0.0.1",
  "publisher": "heyzec",
  "icon": "assets/icon.png",
  "repository": "https://github.com/heyzec/pbleap",
  "engines": {
    "vscode": "^1.93.0"
  },
  "main": "./dist/wrapper.js",
  "activationEvents": [
    "workspaceContains:**/*.proto",
    "workspaceContains:**/*.pb.go"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PBLeap Configuration",
      "properties": {
        "pbleap.protoGenMapping": {
          "type": "object",
          "description": "Map of protobuf paths to generated file paths.",
          "default": {},
          "additionalProperties": {
            "type": [
              "string"
            ]
          }
        }
      }
    }
  },
  "scripts-info": {
    "compile:wrapper": "Builds entrypoint to extension",
    "compile:extension": "Bundles main source for the extension",
    "build:wasm": "Copies WASM files required for Tree-sitter parser (requires `just wasm` first)",
    "build": "Creates all files required for the extension",
    "format": "Format source code",
    "watch": "Rebuild source code in this repo on change",
    "vscode:prepublish": "Step called by vsce before packaging/publishing (convention by VS Code)",
    "package": "Package the extension into .vsix format"
  },
  "scripts": {
    "compile:wrapper": "tsc src/wrapper.ts --outDir dist --module commonjs --target ES2020",
    "compile:extension": "webpack --mode production --devtool hidden-source-map",
    "build:wasm": "cp parsers/* dist/",
    "build": "npm run compile:wrapper && npm run compile:extension && npm run build:wasm",
    "format": "prettier . --write",
    "watch": "webpack --watch",
    "vscode:prepublish": "npm run build",
    "package": "vsce package --no-dependencies --skip-license"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^3.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "tree-sitter-go": "^0.25.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.6.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "web-tree-sitter": "^0.25.10"
  }
}
