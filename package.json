{
  "name": "pbleap",
  "displayName": "PBLeap",
  "version": "0.0.1",
  "publisher": "heyzec",
  "icon": "client/assets/icon.png",
  "repository": "https://github.com/heyzec/pbleap",
  "engines": {
    "vscode": "^1.93.0"
  },
  "main": "./client/dist/wrapper.js",
  "activationEvents": [
    "workspaceContains:**/*.proto",
    "workspaceContains:**/*.pb.go"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PBLeap Configuration",
      "properties": {
        "pbleap.protoGenMapping": {
          "type": "object",
          "description": "Map of protobuf paths to generated file paths.",
          "default": {},
          "additionalProperties": {
            "type": [
              "string"
            ]
          }
        }
      }
    }
  },
  "scripts-info": {
    "build": "Creates all files required for the extension",
    "format": "Format source code",
    "watch": "Rebuild source code in this repo on change",
    "vscode:prepublish": "Step called by vsce before packaging/publishing (convention by VS Code)",
    "package": "Package the extension into .vsix format"
  },
  "scripts": {
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "npm run build:client && npm run build:server",
    "format": "prettier . --write",
    "watch": "webpack --watch",
    "vscode:prepublish": "npm run build",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@vscode/vsce": "^3.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.6.2"
  }
}
